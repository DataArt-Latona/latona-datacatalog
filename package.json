{
  "name": "latona-datacatalog",
  "version": "0.1.4",
  "description": "Latona addon for generating model-based human-readable data catalog pages (md, html, Confluence Cloud)",
  "main": "./src/addon.js",
  "scripts": {
    "test": "mocha ./test/**/*.spec.js",
    "lint": "npx eslint .",
    "coverage": "nyc --all --reporter=html --reporter=text --reporter=lcov npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DataArt-Latona/latona-datacatalog"
  },
  "keywords": [
    "DataArt",
    "Latona",
    "Data Catalog"
  ],
  "license": "Apache 2.0",
  "bin": {
    "dc2confcloud": "bin/dc2confcloud.js"
  },
  "dependencies": {
    "ajv": "^6.12.2",
    "axios": "^0.21.1",
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "fs-extra": "^7.0.1",
    "lodash": "^4.17.21",
    "markdown-it": "^10.0.0",
    "mustache": "^3.2.1",
    "p-limit": "^3.0.2",
    "qs": "^6.9.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.20.2",
    "jsdoc-to-markdown": "^5.0.3",
    "mocha": "^7.1.1",
    "mock-require": "^3.0.3",
    "nyc": "^15.0.0",
    "prettier": "2.0.4",
    "sinon": "^9.2.4"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "private": false,
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "class-methods-use-this": "off",
      "consistent-return": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "arrow-body-style": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "linebreak-style": [
        "error",
        "windows"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ]
    },
    "env": {
      "mocha": true
    }
  },
  "eslintIgnore": [
    "./node_modules/**",
    "coverage/**"
  ],
  "nyc": {
    "exclude": [
      "coverage /**",
      "test/**",
      "test{,-*}.js",
      "**/*.test.js",
      "**/__tests__ /**",
      "**/node_modules/**",
      "**/examples/**"
    ]
  }
}
